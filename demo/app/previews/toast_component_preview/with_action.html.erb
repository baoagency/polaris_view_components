<%= polaris_frame do |frame| %>
  <%= polaris_page(title: "Toast example") do %>
    <%= polaris_button(data: {
      controller: "polaris",
      target: "#demo-toast",
      action: "polaris#showToast",
    }) { "Show toast" } %>
  <% end %>

  <% frame.toasts do %>
    <%= polaris_toast(id: "demo-toast", hidden: true) do |toast| %>
      <% toast.action { "Undo" } %>
      Message sent
    <% end %>
  <% end %>
<% end %>
