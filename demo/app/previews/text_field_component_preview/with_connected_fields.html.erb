<%= polaris_text_field(
  name: :weight,
  value: "10.6",
  type: :number,
) do |c| %>
  <% c.with_connected_left do %>
    <%= polaris_select(
      name: :weight_unit,
      label: "Weight unit",
      label_hidden: true,
      options: { "kd" => "kg", "lb" => "lb" },
      selected: "kg",
    ) %>
  <% end %>
  <% c.with_connected_right do %>
    <%= polaris_button { "Submit" } %>
  <% end %>
<% end %>
