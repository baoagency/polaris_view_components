<%= polaris_popover(active: true) do |popover| %>
  <% popover.with_button(disclosure: true) { "More actions" } %>

  <%= polaris_action_list do |action_list| %>
    <% action_list.with_section(title: "File options") do |section| %>
      <% section.with_item(icon: "ImportMinor", active: true) { "Import file" } %>
      <% section.with_item(icon: "ExportMinor") { "Export file" } %>
      <% section.with_item(icon: "DeleteMinor", destructive: true) { "Delete file" } %>
    <% end %>
  <% end %>
<% end %>
