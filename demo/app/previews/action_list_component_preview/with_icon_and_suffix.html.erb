<%= polaris_popover(active: true) do |popover| %>
  <% popover.with_button(disclosure: true) { "More actions" } %>

  <%= polaris_action_list do |action_list| %>
    <% action_list.with_item(icon: "ImportMinor", active: true) do |item| %>
      <% item.with_suffix do %>
        <%= polaris_icon(name: "TickSmallMinor") %>
      <% end %>
      Import file
    <% end %>
    <% action_list.with_item(icon: "ExportMinor") { "Export file" } %>
  <% end %>
<% end %>
