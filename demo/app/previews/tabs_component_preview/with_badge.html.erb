<%= polaris_card do |card| %>
  <% card.tabs(fitted: true) do |tabs| %>
    <% tabs.tab(title: "All", active: true) do |tab| %>
      <% tab.badge { "10+" } %>
    <% end %>
    <% tabs.tab(title: "Accepts marketing") do |tab| %>
      <% tab.badge { "4" } %>
    <% end %>
  <% end %>

  <% card.section(title: "All") do %>
    Tab "All" selected.
  <% end %>
<% end %>
