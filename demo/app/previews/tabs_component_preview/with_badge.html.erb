<%= polaris_card do |card| %>
  <% card.with_tabs(fitted: true) do |tabs| %>
    <% tabs.with_tab(title: "All", active: true) do |tab| %>
      <% tab.with_badge { "10+" } %>
    <% end %>
    <% tabs.with_tab(title: "Accepts marketing") do |tab| %>
      <% tab.with_badge { "4" } %>
    <% end %>
  <% end %>

  <% card.with_section(title: "All") do %>
    Tab "All" selected.
  <% end %>
<% end %>
