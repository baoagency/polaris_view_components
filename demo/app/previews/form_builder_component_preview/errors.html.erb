<%= form_with(model: product, builder: Polaris::FormBuilder) do |form| %>
  <%= polaris_layout do |layout| %>
    <%= layout.with_section do %>
      <%= form.errors_summary %>
    <% end %>

    <%= layout.with_section do %>
      <%= form.errors_summary do %>
        with custom content
      <% end %>
    <% end %>

    <%= layout.with_section do %>
      <%= form.polaris_text_field(:title) %>
    <% end %>

    <%= layout.with_section do %>
      <%= form.polaris_text_field(:title, clear_errors_on_focus: true) %>
    <% end %>
  <% end %>
<% end %>
