<%= polaris_skeleton_page(title: "Products", primary_action: true) do %>
  <%= polaris_layout do |layout| %>
    <% layout.with_section do %>
      <%= polaris_card do %>
        <%= polaris_skeleton_body_text %>
      <% end %>
      <%= polaris_card(title: "Images") do %>
        <%= polaris_skeleton_body_text %>
      <% end %>
      <%= polaris_card(title: "Variants") do %>
        <%= polaris_skeleton_body_text %>
      <% end %>
    <% end %>
    <% layout.with_section(secondary: true) do %>
      <%= polaris_card(title: "Sales channels") do |card| %>
        <% card.with_section do %>
          <%= polaris_skeleton_body_text(lines: 2) %>
        <% end %>
        <% card.with_section do %>
          <%= polaris_skeleton_body_text(lines: 1) %>
        <% end %>
      <% end %>
      <%= polaris_card(title: "Organization") do |card| %>
        <% card.with_section do %>
          <%= polaris_skeleton_body_text(lines: 2) %>
        <% end %>
        <% card.with_section do %>
          <%= polaris_skeleton_body_text(lines: 1) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
