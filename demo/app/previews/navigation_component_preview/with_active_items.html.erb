<%= polaris_navigation do |navigation| %>
  <% navigation.with_section do |section| %>
    <% section.with_item(
      url: "#",
      label: "Home",
      icon: "HomeMinor",
      selected: true
    ) %>
    <% section.with_item(
      url: "#",
      label: "Orders",
      icon: "OrdersMinor"
    ) %>
    <% section.with_item(
      url: "#",
      label: "Products",
      icon: "ProductsMinor"
    ) do |item| %>
      <% item.with_sub_item(
        url: "#",
        label: "All products",
        selected: true
      ) %>
      <% item.with_sub_item(
        url: "#",
        label: "Inventory"
      ) %>
      <% item.with_sub_item(
        url: "#",
        label: "Disabled",
        disabled: true
      ) %>
    <% end %>
  <% end %>
<% end %>
