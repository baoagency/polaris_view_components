<%= polaris_navigation do |navigation| %>
  <% navigation.with_section do |section| %>
    <% section.with_item(
      url: "#",
      label: "Home",
      icon: "HomeIcon"
    ) do |item| %>
      <% item.with_secondary_action(url: "#", icon: "ExternalIcon", external: true) %>
    <% end %>
    <% section.with_item(
      url: "#",
      label: "Orders (external)",
      icon: "OrderIcon",
      external: true
    ) %>
    <% section.with_item(
      url: "#",
      label: "Products",
      icon: "ProductIcon"
    ) do |item| %>
      <% item.with_sub_item(
        url: "#",
        label: "All products"
      ) %>
      <% item.with_sub_item(
        url: "#",
        label: "Inventory (external)",
        external: true
      ) %>
    <% end %>
  <% end %>
<% end %>
