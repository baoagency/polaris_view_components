<%= polaris_setting_toggle(enabled: false) do |toggle| %>
  <% toggle.with_action { "Activate" } %>
  This setting is <%= polaris_text_strong { "deactivated" } %>.
<% end %>

<%= polaris_setting_toggle(enabled: true) do |toggle| %>
  <% toggle.with_action { "Deactivate" } %>
  This setting is <%= polaris_text_strong { "activated" } %>.
<% end %>
