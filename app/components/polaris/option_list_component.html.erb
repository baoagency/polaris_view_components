<%= polaris_box(as: :ul, padding: "2", **system_arguments) do %>
  <% if sections.present? %>
    <% sections.each do |section| %>
      <%= section %>
    <% end %>
  <% elsif items.present? %>
    <%= render(Polaris::OptionList::SectionComponent.new(
      title: @title,
      position: @sections_count
    )) do %>
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    <% end %>
  <% else %>
    <%= content %>
  <% end %>
<% end %>
