<%= render(Polaris::BaseComponent.new(**@system_arguments)) do %>
  <%= polaris_stack(spacing: :tight, distribution: stack_distribution) do |stack| %>
    <% if secondary_actions %>
      <% stack.item do %>
        <%= polaris_button_group do |group| %>
          <% secondary_actions.each do |action| %>
            <% group.item do %>
              <%= action %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <% if primary_action %>
      <% stack.item do %>
        <%= primary_action %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
